# ===========================
# Production Environment
# ===========================

ENVIRONMENT=production

# ===========================
# Backend Configuration
# ===========================

# Production database - CHANGE CREDENTIALS IN PRODUCTION!
DATABASE_URL=postgresql://winduser_prod:CHANGE_THIS_PASSWORD@db:5432/windnewsdb_prod

# Production URLs only
CORS_ORIGINS=https://windnews.rabciak.site,https://api.windnews.rabciak.site

# Disable debug in production
DEBUG=False
LOG_LEVEL=WARNING

# IMPORTANT: Generate secure secret key with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# ===========================
# Frontend Configuration
# ===========================

# Production API URL
VITE_API_URL=https://api.windnews.rabciak.site

# ===========================
# Database Configuration
# ===========================

# IMPORTANT: Use strong passwords in production!
POSTGRES_USER=winduser_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=windnewsdb_prod

# ===========================
# Production Services
# ===========================

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@windnews.rabciak.site

# Geocoding API
NOMINATIM_API_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=WindNewsMapper/1.0

# Sentry error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# ===========================
# Security Settings
# ===========================

# Rate limiting (requests per minute)
RATE_LIMIT=100

# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# Enable SSL/TLS
FORCE_HTTPS=True

# ===========================
# Backup Configuration
# ===========================

# Database backup location
BACKUP_PATH=/opt/backups/windnewsmapper
BACKUP_RETENTION_DAYS=30

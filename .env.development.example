# ===========================
# Development Environment
# ===========================

ENVIRONMENT=development

# ===========================
# Backend Configuration
# ===========================

# Local development database
DATABASE_URL=postgresql://winduser:windpass@db:5432/windnewsdb

# Allow local development origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Enable debug mode
DEBUG=True
LOG_LEVEL=DEBUG

# Development secret (not used in production)
SECRET_KEY=dev-secret-key-not-for-production

# ===========================
# Frontend Configuration
# ===========================

# Point to local backend
VITE_API_URL=http://localhost:8000

# ===========================
# Database Configuration
# ===========================

POSTGRES_USER=winduser
POSTGRES_PASSWORD=windpass
POSTGRES_DB=windnewsdb

# ===========================
# Optional Development Tools
# ===========================

# Enable SQL query logging
# SQLALCHEMY_ECHO=True

# Enable auto-reload for backend
# UVICORN_RELOAD=True
